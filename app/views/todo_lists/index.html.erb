<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 m-auto">
      <div class="jumbotron">
        <div class="header_todo_list d-flex justify-content-around">
          <div class="wrap-icon">
           <i class="fa fa-bandcamp" aria-hidden="true"></i>
          </div>
          <h1 class="display-4">Todo Lists</h1>
          <div class="wrap-icon">
            <i class="fa fa-bandcamp" aria-hidden="true"></i>
          </div>
        </div>
          <table class="table table-hover" >
            <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
            <% @todo_lists.each do |todo_list| %>
              <% if todo_list.user == current_user %>
                <tr>
                  <td><%= todo_list.title %></td>
                  <td><%= todo_list.description %></td>
                  <td><%= link_to 'Show', todo_list %></td>
                  <td><%= link_to 'Edit', edit_todo_list_path(todo_list) %></td>
                  <td><%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            <% end %>
            </tbody>
          </table>
        <br>
        <%  if user_signed_in? %>
          <%= link_to 'New Todo List', new_todo_list_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>


